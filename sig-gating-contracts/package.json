{
  "name": "@nexeraprotocol/nexera-id-sig-gating-contracts",
  "version": "2.2.40",
  "description": "Nexera ID Signature Based Gating Contracts",
  "author": "Nexera ID",
  "files": [
    "**/*.sol"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NexeraProtocol/NexeraIDSigGatingContracts.git",
    "directory": "sig-gating-contracts"
  },
  "scripts": {
    "test:unit": "hardhat test --parallel",
    "test:seq": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy-local-testing-contracts": "pnpm deploy-amoy-local && pnpm deploy-sepolia-local",
    "deploy-testnet-contracts": "pnpm deploy-amoy && pnpm deploy-sepolia",
    "deploy-amoy": "hardhat deploy --tags testnet --network amoy",
    "deploy-sepolia": "hardhat deploy --tags testnet --network sepolia",
    "deploy-polygon": "hardhat deploy --tags testnet --network polygon",
    "deploy-base": "hardhat deploy --tags mainnet --network base",
    "deploy-ethereum": "hardhat deploy --tags mainnet --network ethereum",
    "deploy-arbitrum": "hardhat deploy --tags mainnet --network arbitrum",
    "deploy-bnb": "hardhat deploy --tags mainnet --network bnb",
    "deploy-optimism": "hardhat deploy --tags mainnet --network optimism",
    "deploy-avalanche": "hardhat deploy --tags mainnet --network avalanche",
    "deploy-sepolia-local": "hardhat deploy --tags testnet --network sepolia_local",
    "deploy-amoy-local": "hardhat deploy --tags testnet --network amoy_local",
    "run-node": "hardhat node",
    "build": "hardhat compile",
    "copy-abi-bytecode": "hardhat run scripts/moveByteCodeAndABIToSdk.ts",
    "copy-factory-address": "hardhat run scripts/moveContractAddressesToSdk.ts",
    "copy-typechain-types": "./scripts/copy-typechain-types.sh",
    "copy-info-to-sdk": "pnpm copy-abi-bytecode && pnpm copy-factory-address && pnpm copy-typechain-types",
    "lint": "prettier --write **/**.ts",
    "lint:check": "prettier --check **/**.ts"
  },
  "keywords": [
    "solidity",
    "smart",
    "contracts"
  ],
  "license": "ISC",
  "dependencies": {
    "@nomicfoundation/hardhat-viem": "^2.0.0",
    "@openzeppelin/contracts": "^4.9.5",
    "@openzeppelin/contracts-upgradeable": "^4.9.5",
    "@solidstate/contracts": "^0.0.59",
    "hardhat-deploy": "0.11.12",
    "hardhat-deploy-ethers": "0.3.0-beta.13"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nexeraprotocol/nexera-id-sig-gating-contracts-sdk": "workspace:*",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.11",
    "@types/eccrypto": "^1.1.6",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.17",
    "chai": "^4.4.1",
    "dotenv": "^16.4.3",
    "eccrypto": "^1.1.6",
    "ethers": "^5.7.2",
    "hardhat": "^2.22.2",
    "hardhat-gas-reporter": "^1.0.10",
    "solhint": "4.0.0",
    "solidity-bytes-utils": "^0.8.2",
    "solidity-coverage": "^0.8.11",
    "ts-node": "^10.9.2",
    "typechain": "^5.2.0",
    "typescript": "5.4.5",
    "viem": "^2.9.31"
  }
}
