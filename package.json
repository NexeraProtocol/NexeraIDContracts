{
  "name": "nexeraid-contracts",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=8.10.2"
  },
  "packageManager": "pnpm@8.10.2",
  "author": "",
  "workspaces": [
    "hardhat-contracts",
    "contracts-sdk"
  ],
  "preconstruct": {
    "packages": [
      "hardhat-contracts",
      "contracts-sdk"
    ]
  },
  "pnpm": {
    "overrides": {
      "hardhat-deploy": "0.11.12",
      "hardhat-deploy-ethers": "0.3.0-beta.13"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@preconstruct/cli": "^2.8.2",
    "copyfiles": "^2.4.1",
    "lerna": "^8.0.2"
  },
  "publishConfig": {
    "@NexeraProtocol:registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build:hardhat": "pnpm run --filter @nexeraprotocol/nexera-id-contracts build",
    "build:contracts-sdk": "pnpm run --filter @nexeraprotocol/nexera-id-contracts-sdk build",
    "publish-pkg:contracts": "pnpm --filter @nexeraprotocol/nexera-id-contracts publish --no-git-checks --registry https://npm.pkg.github.com/",
    "publish-pkg:sdk": "pnpm --filter @nexeraprotocol/nexera-id-contracts-sdk publish-sdk-pkg",
    "test:unit": "pnpm run --filter @nexeraprotocol/nexera-id-contracts test:unit"
  }
}
