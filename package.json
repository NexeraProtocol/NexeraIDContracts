{
  "name": "nexeraid-contracts",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=8.10.2"
  },
  "packageManager": "pnpm@8.10.2",
  "author": "",
  "workspaces": [
    "sig-gating-contracts",
    "zkp-gating-contracts",
    "contracts-sdk"
  ],
  "preconstruct": {
    "packages": [
      "sig-gating-contracts",
      "zkp-gating-contracts",
      "contracts-sdk"
    ]
  },
  "pnpm": {
    "overrides": {
      "hardhat-deploy": "0.11.12",
      "hardhat-deploy-ethers": "0.3.0-beta.13"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@preconstruct/cli": "^2.8.3",
    "copyfiles": "^2.4.1",
    "lerna": "^8.1.2"
  },
  "publishConfig": {
    "@NexeraProtocol:registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "lint": "pnpm -r lint",
    "lint:check": "pnpm -r lint:check",
    "postinstall": "pnpm run build:contracts && pnpm run build:contracts-sdk",
    "build:sig-gating-contracts": "pnpm run --filter @nexeraprotocol/nexera-id-sig-gating-contracts build",
    "build:zkp-gating-contracts": "pnpm run --filter @nexeraprotocol/nexera-id-zkp-gating-contracts build",
    "build:contracts": "pnpm run build:sig-gating-contracts && pnpm run build:zkp-gating-contracts",
    "build:contracts-sdk": "pnpm run --filter @nexeraprotocol/nexera-id-contracts-sdk build",
    "publish-pkg:sig-gating-contracts": "pnpm --filter @nexeraprotocol/nexera-id-sig-gating-contracts publish --no-git-checks --registry https://npm.pkg.github.com/",
    "publish-pkg:zkp-gating-contracts": "pnpm --filter @nexeraprotocol/nexera-id-zkp-gating-contracts publish --no-git-checks --registry https://npm.pkg.github.com/",
    "publish-pkg:contracts": "pnpm run publish-pkg:sig-gating-contracts && pnpm run publish-pkg:zkp-gating-contracts",
    "publish-pkg:sdk": "pnpm --filter @nexeraprotocol/nexera-id-contracts-sdk publish-sdk-pkg",
    "test:unit": "pnpm run --filter @nexeraprotocol/nexera-id-sig-gating-contracts test:seq && pnpm run --filter @nexeraprotocol/nexera-id-zkp-gating-contracts test:seq",
    "deploy-contracts:sig-gating": "pnpm --filter @nexeraprotocol/nexera-id-sig-gating-contracts deploy-contracts",
    "deploy-contracts:zkp-gating": "pnpm --filter @nexeraprotocol/nexera-id-zkp-gating-contracts deploy-contracts",
    "deploy-contracts": "pnpm deploy-contracts:sig-gating && pnpm deploy-contracts:zkp-gating"
  }
}
